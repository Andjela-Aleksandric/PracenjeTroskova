@model PracenjeTroskova.Models.Transakcija

@{
    ViewData["PageTitle"] = Model.TransakcijaID == 0 ? "Dodajte novu transakciju" : "Izmenite transakciju";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color: #212b36">
            <form asp-action="DodajIliIzmeni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="TransakcijaID" value="@Model.TransakcijaID" /> @* polje za primarni kljuc *@
                <div class="mb-3">
                    <ejs-datepicker id="datum" ejs-for="Datum" placeholder="Datum" floatLabelType="Always"
                    format="MMM-dd-yyyy"></ejs-datepicker>                 
                </div>
            <div class="mb-3">
                    <ejs-dropdownlist id="dropDownListaKategorija" ejs-for="KategorijaID" dataSource="@ViewBag.Kategorije"
                    placeholder="Kategorija" floatLabelType="Always" allowFiltering="true" ignoreAccent="true" filterType="Contains"> 
                        <e-dropdownlist-fields value="KategorijaID" text="NazivSaIkonicom">

                        </e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="KategorijaID" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                <ejs-numerictextbox id="iznos" ejs-for="Iznos" Type="text" placeholder="Iznos"
                                        floatLabelType="Always" min="0" format="c0" currency="EUR"></ejs-numerictextbox>
                <span asp-validation-for="Iznos" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                <ejs-textbox id="opis" placeholder="Opis" ejs-for="Opis" floatLabelType="Always" multiline="true"></ejs-textbox>              
            </div>

             <ejs-button id="submit" type="submit" content="Potvrdi" cssClass="e-success"></ejs-button>
        </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>


